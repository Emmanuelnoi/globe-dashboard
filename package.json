{
  "name": "3d-global-dashboard",
  "version": "1.1.0",
  "description": "Interactive 3D globe for exploring geography, visualizing bird migration patterns, and testing your knowledge through engaging quizzes",
  "author": "Emmanuel Noi",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "3d",
    "globe",
    "geography",
    "bird-migration",
    "quiz",
    "threejs",
    "angular",
    "typescript",
    "webgl",
    "data-visualization",
    "interactive",
    "education"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Emmanuelnoi/3d-global-dashboard.git"
  },
  "bugs": {
    "url": "https://github.com/Emmanuelnoi/3d-global-dashboard/issues"
  },
  "homepage": "https://github.com/Emmanuelnoi/3d-global-dashboard#readme",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "ng": "ng",
    "start": "node scripts/inject-env-dev.mjs && ng serve",
    "build": "node scripts/inject-env.mjs && ng build",
    "build:local": "ng build",
    "build:analyze": "node scripts/inject-env.mjs && ng build --source-map",
    "analyze": "source-map-explorer dist/global-dashboard/browser/**/*.js --html bundle-analysis.html --no-border-checks",
    "watch": "ng build --watch --configuration development",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:ci": "vitest run --reporter=verbose --coverage",
    "test:blocking": "vitest run --config=vitest.config.blocking.ts --reporter=verbose",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "playwright test --debug",
    "e2e:ci": "playwright test --reporter=html",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --project tsconfig.typecheck.json --noEmit --skipLibCheck",
    "docs": "compodoc -p tsconfig.json -d documentation --silent && compodoc -s -d documentation",
    "docs:generate": "compodoc -p tsconfig.json -d documentation",
    "docs:serve": "compodoc -s -d documentation",
    "clean": "rimraf dist",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install || true",
    "data:fetch": "npx tsx scripts/fetch-country-data-robust.ts",
    "data:update": "pnpm run data:fetch && pnpm run format",
    "geo:convert": "node scripts/geo/convert-geojson-to-topo.mjs",
    "geo:convert:verbose": "node scripts/geo/convert-geojson-to-topo.mjs --verbose"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.15",
    "@angular/compiler": "^20.3.15",
    "@angular/forms": "^20.3.15",
    "@angular/router": "^20.3.15",
    "@angular/service-worker": "^20.3.15",
    "@sentry/angular": "^10.32.1",
    "@supabase/supabase-js": "^2.89.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@vercel/analytics": "^1.6.1",
    "earcut": "^3.0.0",
    "idb": "^8.0.3",
    "lucide-angular": "^0.552.0",
    "postcss": "^8.5.6",
    "rxjs": "~7.8.2",
    "tailwindcss": "^4.1.13",
    "three": "^0.179.1",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@analogjs/vite-plugin-angular": "^0.2.29",
    "@angular-eslint/builder": "^18.4.2",
    "@angular/build": "^20.2.2",
    "@angular/cli": "^20.2.2",
    "@angular/common": "^20.3.15",
    "@angular/compiler-cli": "^20.3.15",
    "@angular/core": "^20.3.15",
    "@angular/platform-browser": "^20.3.15",
    "@angular/platform-browser-dynamic": "^20.3.15",
    "@axe-core/playwright": "^4.11.0",
    "@compodoc/compodoc": "^1.1.16",
    "@eslint/css": "^0.10.0",
    "@eslint/js": "^9.35.0",
    "@eslint/json": "^0.13.2",
    "@eslint/markdown": "^7.2.0",
    "@playwright/test": "^1.57.0",
    "@types/earcut": "^2.1.4",
    "@types/node": "^24.4.0",
    "@types/three": "^0.179.0",
    "@types/topojson-client": "^3.1.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "angular-eslint": "^18.4.2",
    "autoprefixer": "^10.4.21",
    "canvas": "^3.2.0",
    "d3-geo": "^3.1.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "fake-indexeddb": "^6.2.2",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "jsdom": "^26.1.0",
    "ng-mocks": "^14.15.1",
    "ng-packagr": "^20.2.0",
    "prettier": "3.7.4",
    "pretty-quick": "^4.2.2",
    "simple-git-hooks": "^2.13.1",
    "source-map-explorer": "^1.3.3",
    "topojson-client": "^3.1.0",
    "topojson-server": "^3.0.1",
    "ts-prune": "^0.9.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.0.0",
    "vite": "^7.1.12",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "overrides": {
      "vite": "^7.1.5",
      "tar@<3.2.2": ">=3.2.2",
      "simple-get@<2.8.2": ">=2.8.2",
      "tar@<4.4.18": ">=4.4.18",
      "tar@<6.2.1": ">=6.2.1",
      "tough-cookie@<4.1.3": ">=4.1.3",
      "semver@<5.7.2": ">=5.7.2",
      "form-data@<2.5.4": ">=2.5.4",
      "tar-fs@>=2.0.0 <2.1.4": ">=2.1.4"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  }
}
