{
  "name": "3d-global-dashboard",
  "version": "1.1.0",
  "description": "Interactive 3D globe for exploring geography, visualizing bird migration patterns, and testing your knowledge through engaging quizzes",
  "author": "Emmanuel Noi",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "3d",
    "globe",
    "geography",
    "bird-migration",
    "quiz",
    "threejs",
    "angular",
    "typescript",
    "webgl",
    "data-visualization",
    "interactive",
    "education"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/3d-global-dashboard.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/3d-global-dashboard/issues"
  },
  "homepage": "https://github.com/yourusername/3d-global-dashboard#readme",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:ci": "vitest run --reporter=verbose --coverage",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "playwright test --debug",
    "e2e:ci": "playwright test --reporter=html",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit --skipLibCheck || true",
    "clean": "rimraf dist",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install || true",
    "data:fetch": "npx tsx scripts/fetch-country-data-robust.ts",
    "data:update": "pnpm run data:fetch && pnpm run format",
    "geo:convert": "node scripts/geo/convert-geojson-to-topo.mjs",
    "geo:convert:verbose": "node scripts/geo/convert-geojson-to-topo.mjs --verbose",
    "prebuild": "pnpm run data:fetch && pnpm run geo:convert"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/compiler": "^20.2.4",
    "@angular/forms": "^20.2.4",
    "@angular/router": "^20.2.4",
    "@angular/service-worker": "^20.3.6",
    "@sentry/angular": "^10.22.0",
    "@supabase/supabase-js": "^2.76.1",
    "@tailwindcss/postcss": "^4.1.13",
    "earcut": "^3.0.0",
    "idb": "^8.0.3",
    "lucide-angular": "^0.542.0",
    "postcss": "^8.5.6",
    "rxjs": "~7.8.2",
    "tailwindcss": "^4.1.13",
    "three": "^0.179.1",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular-eslint/builder": "20.1.1",
    "@angular/animations": "^20.3.1",
    "@angular/build": "^20.2.2",
    "@angular/cli": "^20.2.2",
    "@angular/common": "^20.2.4",
    "@angular/compiler-cli": "^20.2.4",
    "@angular/core": "^20.2.4",
    "@angular/platform-browser": "^20.2.4",
    "@angular/platform-browser-dynamic": "^20.2.4",
    "@eslint/css": "^0.10.0",
    "@eslint/js": "^9.35.0",
    "@eslint/json": "^0.13.2",
    "@eslint/markdown": "^7.2.0",
    "@playwright/test": "^1.55.0",
    "@types/earcut": "^2.1.4",
    "@types/node": "^24.4.0",
    "@types/three": "^0.179.0",
    "@types/topojson-client": "^3.1.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "angular-eslint": "20.1.1",
    "autoprefixer": "^10.4.21",
    "canvas": "^3.2.0",
    "d3-geo": "^3.1.1",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "fake-indexeddb": "^6.2.2",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "jsdom": "^26.1.0",
    "ng-packagr": "^20.2.0",
    "prettier": "3.6.2",
    "pretty-quick": "^4.2.2",
    "simple-git-hooks": "^2.13.1",
    "topojson-client": "^3.1.0",
    "topojson-server": "^3.0.1",
    "ts-prune": "^0.10.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "8.34.1",
    "vite": "^7.1.5",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "overrides": {
      "vite": "^7.1.5",
      "tar@<3.2.2": ">=3.2.2",
      "simple-get@<2.8.2": ">=2.8.2",
      "tar@<4.4.18": ">=4.4.18",
      "tar@<6.2.1": ">=6.2.1",
      "tough-cookie@<4.1.3": ">=4.1.3",
      "semver@<5.7.2": ">=5.7.2",
      "form-data@<2.5.4": ">=2.5.4",
      "tar-fs@>=2.0.0 <2.1.4": ">=2.1.4"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  }
}
